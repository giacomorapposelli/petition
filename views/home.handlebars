<div class="pet-container">
  <h1 class="title">Sign our petition</h1>
  <form method='POST'>
    <h4>Sign here</h4>
    <input id="sign" type="hidden" name='signature'>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <canvas height="100px" width="600px"></canvas>
    <input type="submit" value="Submit!" class="button sigbtn" required>
  </form>
</div>
{{#if error}}
<h2 class="error">All fields are mandatory!</h2>
{{/if}}
<script src="./canvas.js"></script>