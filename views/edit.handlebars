<div class="edit-container">
    <h2 class="up">Update Your Profile</h2>
    <form method='POST'>
        {{#dataToEdit}}
        <input class="input" type="text" class="form-control" id="firstname" name="firstname" placeholder="First name"
            value="{{first}}" />
        <input class="input" type="text" class="form-control" id="lastname" name="lastname" placeholder="Last name"
            value="{{last}}" />
        <input class="input" type="email" class="form-control" id="email" name="email" placeholder="Your Email"
            value="{{email}}" />
        <input class="input" type="password" class="form-control" id="password" name="password"
            placeholder="Your Password" />
        <input class="input" type="text" class="form-control" id="age" name="age" placeholder="Age" value="{{age}}" />
        <input class="input" type="text" class="form-control" id="city" name="city" placeholder="City"
            value="{{city}}" />
        <input class="input" type="text" class="form-control" id="homepage" name="url" placeholder="Homepage"
            value="{{url}}" />
        <input type="submit" value="Update!" class="button upbtn">
        {{/dataToEdit}}
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
    </form>
</div>
{{#if error}}
<h2 class="error">Something bad happened.</h2>
{{/if}}
<a href="/thanks" class="back">Go back to your profile</a>